<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#61380B"
        android:background="@drawable/shape_title" />
    <ImageView
        android:id="@+id/picture"
        android:layout_height="250dp"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"/>
    <ImageView
        android:id="@+id/map"
        android:layout_height="250dp"
        android:layout_width="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp" />
    <TextView
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="call"
        android:textSize="16sp"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="web"
        android:textSize="15sp"
        android:gravity="left"
        android:textColor="#000000"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:text="메뉴"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#61380B"
        android:background="@drawable/shape_title"
        android:layout_marginBottom="10dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_list"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menuone"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true" />
            <TextView
                android:id="@+id/menuone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_list"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/menutwo"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:adjustViewBounds="true" />
            <TextView
                android:id="@+id/menutwo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_list"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menuthree"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/menuthree_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_list"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menufour"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/menufour_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_list"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menufive"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/menufive_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_list"
                android:orientation="vertical"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/menusix"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:adjustViewBounds="true" />
                <TextView
                    android:id="@+id/menusix_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
